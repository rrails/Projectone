  <% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation%>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.label :timezone %>
  <%= f.time_zone_select :timezone %>
  <br>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br>
  <%= f.label :preferredstarttime %>
  <%= f.text_field :preferredstarttime %>
  <br>
  <%= f.label :preferredendtime %>
  <%= f.text_field :preferredendtime %>
  <br>
  <%= f.label :emailaddress %>
  <%= f.text_field :email %>
  <br>
  <%= f.submit %>

<% end %>

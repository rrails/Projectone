<div class = 'detail'>
  <table>
  <% @users.each do |user| %>
    <tr class='item'>
      <td><%= user.name %></td>
      <td><%= user.timezone %></td>
      <td><%= user.location %></td>
      <td><%= user.email %></td>
      <td><%=  link_to 'Edit', edit_users_path%></td>
<!-- This deletes the record without showing the data -->
      <td><%= link_to 'delete', user, :method => :delete %></td>
    </tr>

  <% end %>
</div>